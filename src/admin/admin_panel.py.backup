async def broadcast_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Handle the /broadcast command for quick broadcasting"""
    user_id = update.effective_user.id
    
    if not await is_admin(user_id):
        await update.message.reply_text("âŒ You don't have permission to broadcast messages.")
        return
    
    # Check if message is provided
    if not context.args:
        await update.message.reply_text(
            "ğŸ“¢ **Broadcast Command** ğŸ“¢\n\n"
            "Usage: `/broadcast <message>`\n\n"
            "Example: `/broadcast Welcome to our new update!`\n\n"
            "This will send the message to all users.",
            parse_mode='Markdown'
        )
        return
    
    # Get the broadcast message
    broadcast_message = ' '.join(context.args)
    
    if len(broadcast_message) < 5:
        await update.message.reply_text("âŒ Message too short. Please enter a meaningful message.")
        return
    
    # Confirm broadcast
    message = (
        f"ğŸ“¢ **Confirm Broadcast** ğŸ“¢\n\n"
        f"**Message to send:**\n{broadcast_message}\n\n"
        f"âš ï¸ This will be sent to ALL users!\n"
        f"Are you sure you want to proceed?"
    )
    
    keyboard = [
        [
            InlineKeyboardButton("âœ… Send Broadcast", callback_data=f"admin_broadcast_confirm"),
            InlineKeyboardButton("âŒ Cancel", callback_data="admin_broadcast_cancel")
        ]
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    
    # Store the message in context
    context.user_data["pending_broadcast"] = broadcast_message
    
    await update.message.reply_text(message, reply_markup=reply_markup, parse_mode='Markdown')

